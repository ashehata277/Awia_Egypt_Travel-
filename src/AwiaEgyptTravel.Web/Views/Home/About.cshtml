@{
    ViewData["Title"] = "About Us";
}

<div class="container mt-4">
    <!-- Hero Section -->
    <div class="hero-section mb-5" style="background-image: url('/images/about-hero.jpg');">
        <div class="bg-overlay h-100">
            <div class="container h-100">
                <div class="row h-100 align-items-center">
                    <div class="col-md-8">
                        <div class="text-white">
                            <h1 class="display-4 fw-bold text-shadow">About Awia Egypt Travel</h1>
                            <p class="lead text-shadow">Your trusted partner for unforgettable Egyptian adventures</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Our Story Section -->
    <section class="mb-5">
        <div class="row">
            <div class="col-md-6">
                <h2 class="mb-4">Our Story</h2>
                <p>Founded in 2020, Awia Egypt Travel has been dedicated to providing exceptional travel experiences across Egypt. Our journey began with a simple mission: to share the beauty, history, and culture of Egypt with travelers from around the world.</p>
                <p>What started as a small team of passionate travel enthusiasts has grown into a full-service travel company, offering carefully curated excursions and luxurious chalet accommodations throughout Egypt's most beautiful destinations.</p>
            </div>
            <div class="col-md-6">
                <img src="/images/about-story.jpg" alt="Our Story" class="img-fluid rounded shadow-lg">
            </div>
        </div>
    </section>

    <!-- Our Values Section -->
    <section class="py-5 bg-light">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-heart-fill text-primary display-4 mb-3"></i>
                        <h4>Passion</h4>
                        <p>We're passionate about creating memorable experiences and sharing the wonders of Egypt with our guests.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-shield-check text-primary display-4 mb-3"></i>
                        <h4>Quality</h4>
                        <p>We maintain the highest standards in all our services, from accommodations to guided tours.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-people-fill text-primary display-4 mb-3"></i>
                        <h4>Customer Focus</h4>
                        <p>Your satisfaction and safety are our top priorities, guiding every decision we make.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Our Team Section -->
    <section class="py-5">
        <h2 class="text-center mb-5">Meet Our Team</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm">
                    <img src="/images/team-1.jpg" class="card-img-top" alt="Team Member">
                    <div class="card-body text-center">
                        <h5 class="card-title">Ahmed Hassan</h5>
                        <p class="card-text text-muted">Founder & CEO</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm">
                    <img src="/images/team-2.jpg" class="card-img-top" alt="Team Member">
                    <div class="card-body text-center">
                        <h5 class="card-title">Sarah Mohamed</h5>
                        <p class="card-text text-muted">Tour Operations Manager</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm">
                    <img src="/images/team-3.jpg" class="card-img-top" alt="Team Member">
                    <div class="card-body text-center">
                        <h5 class="card-title">Mohamed Ali</h5>
                        <p class="card-text text-muted">Customer Relations Director</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Statistics Section -->
    <section class="py-5 bg-primary text-white">
        <div class="row text-center">
            <div class="col-md-3 mb-4">
                <h2 class="display-4 fw-bold">5000+</h2>
                <p>Happy Customers</p>
            </div>
            <div class="col-md-3 mb-4">
                <h2 class="display-4 fw-bold">100+</h2>
                <p>Unique Tours</p>
            </div>
            <div class="col-md-3 mb-4">
                <h2 class="display-4 fw-bold">50+</h2>
                <p>Destinations</p>
            </div>
            <div class="col-md-3 mb-4">
                <h2 class="display-4 fw-bold">4.9</h2>
                <p>Average Rating</p>
            </div>
        </div>
    </section>
</div>
